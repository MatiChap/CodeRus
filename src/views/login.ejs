<!DOCTYPE html>
<html lang=es>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <title>CodeRus - Log In</title>
    <link rel="icon" href="/img/TinyLogo.png">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300&family=Roboto:wght@400;900&display=swap" rel="stylesheet"> 
</head>


<body>
    <%- include('./partials/header') %>
    
        
         <div class="error">
            <ul>

            </ul>
        </div>
        
            <% if (locals.errors) { 
            errors.forEach(error => { %>
            <form class="form" action="login" method="post">
            
                <h1 id="regtitle">Log-In  <i class="fas fa-sign-in"></i></i></h1>
            <div class="profilecont1">
                <label>E-mail <i class="fas fa-envelope"></i></label>
                <br></br>
                <input class="input" type="email" name="email" required>
            </div>
    
            <div class="profilecont1">
                <label>Password <i class="fas fa-user-shield"></i></label>
                <br></br>
                <input class="input" type="password" name="password" required>
            </div>
            <p class="errors"><i class="fal fa-times-hexagon"></i> 

                <%= error.msg %></p>
    
            
                <input class="buttons" type="submit" name="button" value="Log In Your Account">
            
    
        </form>
        <%    })}else{ %>
            <form class="form" action="login" method="post">
            
                <h1 id="regtitle">Log-In  <i class="fas fa-sign-in"></i></i></h1>
            <div class="profilecont1">
                <label>E-mail <i class="fas fa-envelope"></i></label>
                <br></br>
                <input class="input" type="email" name="email" required>
            </div>
    
            <div class="profilecont1">
                <label>Password <i class="fas fa-user-shield"></i></label>
                <br></br>
                <input class="input" type="password" name="password" required>
            </div>
            
    
            
                <input class="buttons" type="submit" name="button" value="Log In Your Account">
            
    
        </form>

        <% } %>

            
        

    
    <div class="error">
        <ul>

        </ul>
    </div>
</body>
<footer>
    <%- include('./partials/footer') %>
</footer>



</html>