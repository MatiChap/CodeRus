<!DOCTYPE html>
<html lang=es>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <title>CodeRus - Register</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300&family=Roboto:wght@400;900&display=swap" rel="stylesheet"> 
</head>


<body>
    <%- include('./partials/header') %>
    <div id="bodyMain">
        <% if (locals.errors) { 
            errors.forEach(error => { %>
            <p class="errors"><i class="fal fa-times-hexagon"></i> 

                <%= error.msg %></p>
        <%    })
         } %>

         <div class="error">
             <ul>

             </ul>
         </div>
        <form method="POST" class="form"  action="/user/register">
            <h1 id="regtitle">Sign-In  <i class="fas fa-arrow-to-right"></i></h1>
            <p>
                <label for="username">Username</label>
                <br></br>
                <input class="input" type="text" name="username">
            </p>
    
            <p>
                <label for="email">E-mail</label>
                <br></br>
                <input class="input" type="email" name="email">
            </p>
    
            <p>
                <label for="password">Password</label>
                <br></br>
                <input class="input" type="password" name="password"></input>
            </p>
            <p>
                
                <label for="age">Age</label>
                <br></br>
                <input class="input" type="text" name="age"></input>
    
            </p>
            <p>
                
                 <label for="phone">Phone Number</label>
                <br></br>
                 <input class="input" type="text" name="phone"></input>
        
            </p>
                <p>
                
                    <label for="age">Nationality</label>
                    <br></br>
                    <input class="input" type="text" name="nationality"></input>
                </p>
        
                <p>
                <input class="buttons" type="submit" name="button" value="Create your account"></input>
            </p>
    
        </form>

        

    </div>
    <%- include('./partials/validationsUser') %>
</body>

<footer>
    <%- include('./partials/footer') %>
</footer>



</html>