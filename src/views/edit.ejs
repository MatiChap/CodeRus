<!DOCTYPE html>
<html lang=es>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <title>CodeRus - Cart</title>
    <link rel="icon" href="/img/TinyLogo.png">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300&family=Roboto:wght@400;900&display=swap" rel="stylesheet"> 
</head>


<body>
    <%- include('./partials/header') %>
    
        <% if (locals.errors) { 
            errors.forEach(error => { %>
            <p class="errors"><i class="fal fa-times-hexagon"></i> 

                <%= error.msg %></p>
        <%    })
         } %>
         <div class="error">
            <ul>

            </ul>
        </div>
    <form class="form" action="/edit/<%= dev.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <h1 id="regtitle">Edit profile:</h1>
      <div class="profilecont1">      
        <label for="name">Full Name <i class="fas fa-user-tag"></i></label>
        
            <input class="input" type="text" name="name" value="<%=dev.name %>"></input>
      </div>
      <div class="profilecont1">
          <label for="description">Description <i class="far fa-keyboard"></i></label>
          
          <textarea class="input" type="text" name="description" value="<%=dev.description %>"></textarea>
      </div>
      <div class="profilecont1">
        <label for="pp" >Profile Picture <i class="fas fa-camera-retro"></i></label>  
        
        <div id="ppcontainer">
        <img class="pp" src="<%=dev.picture %>"">
        </div>
               
        <input type="file" name="picture" required></input>
        

    </div>
      

      <input class="buttons" type="submit" value="Update"></input>


    </form>
    
    <%- include('./partials/DevEditValidate') %>
</body>
<footer>
    <%- include('./partials/footer') %>
</footer>


</html>