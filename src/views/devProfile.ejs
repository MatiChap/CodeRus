        <% for(let i = 0; i < 1; i++){   %>
        
            <div class="profile">
                <div class="profilecont1">
           
                <div id="ppcontainer">
                <img class="pp" id="devPic<%=data[i].devs.id %>" src="<%= data[i].devs.picture%>">
                  </div> <div>
